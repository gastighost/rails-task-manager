<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<h3><%= link_to "Edit this task", edit_task_path %></h3>

<h3><%= link_to "Delete this task",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></h3>

<h3><%= link_to "Back to list", tasks_path %></h3>
